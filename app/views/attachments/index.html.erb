<%- model_class = Attachment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= link_to 'Create Attachment', new_attachment_path, :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:image_file_name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.image_file_name %></td>
        <td><%= image_tag attachment.image.url(:thumb) %></td>
        <td><%= attachment.created_at %></td>
        <td>
          <%= link_to "Show", attachment_path(attachment) %>
          <%= link_to "Edit", edit_attachment_path(attachment) %>
          <%= link_to "Delete", attachment_path(attachment),
                      :title => "Delete",
                      :method => :delete,
                      :data => { :confirm => "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
