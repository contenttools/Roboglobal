$('tbody#attachments').html('<%= escape_javascript render(@attachments) %>');
$('#paginator').html('<%= escape_javascript(paginate(@attachments, :remote => true).to_s) %>');

$('.chosen_attachment').click(function() {
  $('#attached_image_id').val($(this).attr('id'));
  $.colorbox.close();
  $('.attached_image').attr('src', $(this).parent().parent().find('img').attr('src'));
  $('.remove_image').removeClass("hide")
});

$('tbody#pdf_attachments').html('<%= escape_javascript render(@pdf_attachments) %>');
$('#paginator_file').html('<%= escape_javascript(paginate(@pdf_attachments, :remote => true, param_name: "page_doc").to_s) %>');

$('.chosen_pdf_attachment').click(function() {
  $('#attached_file_id').val($(this).attr('id'));
  $.colorbox.close();
  $('.attached_file_pdf').attr('src', $(this).parent().parent().find('img').attr('src'));
  $('.remove_file').removeClass("hide");
});

$('tbody#embedded_attachments').html('<%= escape_javascript render(@embedded_attachments) %>');
$('#paginator_video').html('<%= escape_javascript(paginate(@embedded_attachments, :remote => true, param_name: "page_vid").to_s) %>');

$('.chosen_embedded_attachment').click(function() {
  $('#attached_video_id').val($(this).attr('id'));
  $.colorbox.close();
  $('.attached_video_embedded').children().first().attr('src', $(this).parent().parent().find('iframe').attr('src'));
  alert($(this).parent().parent().find('iframe').attr('src'));
  $('.attached_video_embedded').show();
  $('.remove_video').removeClass("hide");
});
