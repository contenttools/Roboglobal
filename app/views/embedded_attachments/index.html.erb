<div class="about-banner">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-centered">
    <div class="us-heading-container">
      <h1>All Videos</h1>
    </div>
  </div>
</div>
<div class="clearfix"></div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="padding-top-50 padding-bottom-50">
        <%= link_to 'Add Video', new_embedded_attachment_path, :class => 'btn btn-primary' %>
        <%= paginate @embedded_attachments %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Preview</th>
              <th>Date</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @embedded_attachments.each do |embedded_attachment| %>
            <tr>
              <td>
                <div class="embed-container">
                  <%= raw embedded_attachment.embed_code %>
                </div>
              </td>
              <td><%= date_format(embedded_attachment.created_at) %></td>
              <td><%= link_to 'Show', embedded_attachment %></td>
              <td><%= link_to 'Edit', edit_embedded_attachment_path(embedded_attachment) %></td>
              <td><%= link_to 'Delete', embedded_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% content_for :js_init do %>
HeaderScroll.init();
<% end %>
