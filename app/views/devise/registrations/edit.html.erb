<%= devise_error_messages! %>
<div class="about-banner">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-centered">
    <div class="us-heading-container">
      <h1>Change Password</h1>
    </div>
  </div>
</div>
<div class="clearfix"></div>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-centered margin-top-70 user-login padding-top-40 padding-bottom-60 margin-bottom-50">
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }) do |f| %>
        <div class="form-group">
          <%= f.label :password, 'New Password' %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Password Confirmation' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :current_password, 'Current Password' %> <i>(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="row">
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 padding-top-20">
            <div class="actions">
              <%= f.submit "Update Password", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% content_for :js_init do %>
HeaderScroll.init();
<% end %>
