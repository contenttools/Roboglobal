<div class="question-form">
  <%= form_for @contact, html: {class: "subscriber-form"} do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "Name", required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :phone, placeholder: "Phone", class: "form-control" %>
    </div>
    <%= f.text_area :message, placeholder: "Message", required: true, rows:3, class: "form-control" %>
    <div class="row">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 button-area">
        <%= f.submit "Submit", class: "default-buttons", id: "contact-submit" %>
      </div>
    </div>
  <% end %>
</div>
