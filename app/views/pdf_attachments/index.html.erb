<%- model_class = PdfAttachment -%>
<h1>All Files</h1>
<%= link_to 'Add File', new_pdf_attachment_path, :class => 'btn btn-primary' %>
<%= paginate @pdf_attachments %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Preview</th>
      <th>Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pdf_attachments.each do |pdf_attachment| %>
      <tr>
        <td><%= pdf_attachment.document_file_name %></td>
        <td><%= image_tag pdf_attachment.document.url(:pdf_mini) %></td>
        <td><%= pdf_attachment.created_at.to_s(:short) %></td>
        <td><%= link_to 'Show', pdf_attachment %></td>
        <td><%= link_to 'Edit', edit_pdf_attachment_path(pdf_attachment) %></td>
        <td><%= link_to 'Delete', pdf_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
