<div class="clearfix"></div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 padding-top-20">
      <div class="edit-file">
        <%= form_for(@pdf_attachment, remote: remote, authenticity_token: true)  do |f| %>
        <% if @pdf_attachment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@pdf_attachment.errors.count, "error") %> prohibited this pdf_attachment from being saved:</h2>
          <ul>
            <% @pdf_attachment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= f.file_field :document, required: true %>
        <div class="actions pull-left form-group">
          <%= f.submit submit_text(f.object, "File"), class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% content_for :js_init do %>
HeaderScroll.init();
<% end %>
